{% extends 'base.html.twig' %}

{% block body %}
    <h2>Ajout / Modification d'un produit</h2>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.price) }}
        {{ form_row(form.image) }}

        {% if original_image is not null %}
            <p>
                Actuellement :
                <img src="{{ asset('lib/asset/' ~ original_image )}}" height="200px" alt="">
            </p>
        {% endif %}

        <div class="text-right">
            <button type="submit" class="btn btn-success">Enregistrer</button>
            <a href="{{ path('app_admin_product_index') }}" class="btn btn-outline-danger">Retour</a>
        </div>
    {{ form_end(form) }}

{% endblock body %}