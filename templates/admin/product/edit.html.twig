{% extends 'base.html.twig' %}

{% block body %}
    <h2>Ajout / Modification d'un produit</h2>
    <hr class="p-3">

    {{ form_start(form) }}
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-3 col-form-label">Nom du produit</label>
        <div class="col-sm-9">
            {{ form_row(form.title) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-3 col-form-label">Choisissez une catégorie</label>
        <div class="col-sm-9">
            {{ form_row(form.category) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-3 col-form-label">Description complète</label>
        <div class="col-sm-9">
            {{ form_row(form.description) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-3 col-form-label">Prix unitaire</label>
        <div class="col-sm-9">
            {{ form_row(form.price) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-3 col-form-label">Image d'illustration</label>
        <div class="col-sm-9">
            {{ form_row(form.image) }}
        </div>
    </div>

        {% if original_image is not null %}
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-3 col-form-label">Image actuelle</label>
                <div class="col-sm-9">
                    <img src="{{ asset('lib/asset/' ~ original_image )}}" height="200px" alt="">
                </div>
            </div>
        {% endif %}

        <div class="text-right">
            <button type="submit" class="btn btn-success">Enregistrer</button>
            <a href="{{ path('app_admin_product_index') }}" class="btn btn-outline-danger">Retour</a>
        </div>
    {{ form_end(form) }}

{% endblock body %}