{% extends 'base.html.twig' %}

{% block body %}
    <h1>Appel de l'api</h1>

    <div class="row">
        <div class="col">
            <div class="row">
            <div class="col">
                <label for="annee">Annee</label>
                <select name="annee">
                    <option name="01">2018</option>
                </select>
            </div>
            <div class="col">
                <label for="popularite">Popularite</label>
                <select name="popularite">
                    <option name="01">Popularite descendante</option>
                    <option name="02">Popularite ascendante</option>
                </select>
            </div>
            <div class="col">
                <label for="genre">Genre</label>
                <select name="genre">
                    <option name="action">Action</option>
                    <option name="sci">Sci-fi et fantastique</option>
                </select>
            </div>
            </div>
        </div>
    </div>

<div class="col-md-12">
    <div class="row mt-4">
        {% for data in array %}
            <div class="card col-md-4 shadow-sm">
                <h4>{{ data.name }}</h4>
                <img src="{{ data.img }}" class="img-fluid">
                <div class="card-body">
                    <p class="card-text">
                        {{ data.description|slice(0, 150) ~ '...' }}
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary">Voir</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Ajouter</button>
                        </div>
                        <small class="text-muted">
                            {{ data.datediff|date('d/m/Y') }}
                        </small>
                    </div>
                </div>
            </div>
        {% else %}
        <p>Aucune série n'est affiché</p>
        {% endfor %}
    </div>
</div>

{% endblock %}


