{% extends 'base.html.twig' %}


{% block body %}

    <div id="content-wrapper">
        <div class="container-fluid">
            <h2>Mes séries</h2>

            <div class="col-md-12">
                <div class="row mt-4">
                    {% for serie in json_data %}
                        <div class="card col-md-3 shadow-sm">

                            <h4>{{ serie['original_name']|slice(0, 20) }}</h4>
                            <img src="{{ serie['poster_path'] }}" alt="" class="img-fluid">

                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <a href="{{ path('app_userseries_ficheserie', {id: serie['id']}) }}"
                                   class="btn btn-sm btn-outline-secondary">
                                    Voir
                                </a>
                                <a href="{{ path('app_userseries_retirerfav', {id: serie['fav_id']}) }}">
                                    <button class="btn btn-sm btn-outline-secondary">
                                        Retirer
                                    </button>
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <p class="alert alert-danger">Vous ne suivez actuellement aucune série !</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>


{% endblock %}