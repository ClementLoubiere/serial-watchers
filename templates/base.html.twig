<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    {# -------------- META --------------#}
    <title>{% block title %}Serial-Watchers{% endblock %}</title>
    {% block stylesheets %}
        {#---------------------- STYLESHEET ---------------------#}
        <link rel="stylesheet" href="{{ asset('lib/bootstrap/bootstrap.min.css') }}">
    {% endblock %}
</head>
<body>
{#---------------------- HEADER ---------------------#}

<header>
    {#------------------------------ DEBUT HEADER ------------------------------#}

    {#---------------------- DEBUT MENU ADMIN -----------------------#}

    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
        <div class="container-fluid navbar-nav">
            {#
               <a class="navbar-brand" href="index.html">logo</a>
            page connecté en tant qu'admin #}

            <a class="navbar-brand col-sm-2 col-md-1 mr-0" href="#">
                LOGO
            </a>
            <a class="navbar-brand" href="{{ path('app_index_index') }}">
                Admin
            </a>

            <div class="navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="">
                            Gestion utilisateur
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="">
                            Gestion serie
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="">
                            Gestion boutique
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {#---------------------- FIN MENU ADMIN -----------------------#}

    {#---------------------- DEBUT MENU INTERFACE UTILISATEUR ---------------------#}
    {#---------------------- LOGO LIEN INDEX ---------------------#}



    {#------------------------------ INSCRIPTION ------------------------------#}

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid navbar-nav">
            <a class="navbar-brand col-sm-2 col-md-1 mr-0" href="#">
                LOGO
            </a>

            <a class="navbar-brand" href="{{ path('app_index_index') }}">
                User
            </a>
            <ul class="navbar-nav navbar-collapse">
                {# si l'utilisateur n'est pas connecté, on ne l'affiche pas#}
                {% if app.user is null %}
                    <li class="nav-item">
                        <a class="nav-link">
                            Accueil
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="#series">
                            Premier pas
                        </a>
                    </li>
                {% else %}
                {#------ PROFIL ------#}
                <li class="nav-item active">
                    <a class="nav-link" href="">Profil <span class="sr-only">(current)</span></a>
                </li>
                {#------ TOUTES LES SERIES ------#}
                <li class="nav-item">
                    <a class="nav-link" href="">Toutes les series</a>
                </li>
                {#------ MES SERIES ------#}
                <li class="nav-item">
                    <a class="nav-link" href="">Mes series</a>
                </li>
                {#------ BOUTIQUE ------#}
                <li class="nav-item">
                    <a class="nav-link" href="">Boutique</a>
                </li>
                {% endif %}
            </ul>

            {% if app.user is null %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('app_security_register') }}" class="nav-link">
                        Inscription
                    </a>
                </li>
                {#------ CONNEXION ------#}
                <li class="nav-item">
                    <a href="" class="nav-link">
                        Connexion
                    </a>
                </li>
            </ul>
            {% else %}
                {# Nom de l'utilisateur connecté #}
                <li class="nav-item">
                    <a class="nav-link">
                        {{ app.user }}
                    </a>
                </li>
                {#------ DECONNEXION ------#}
                <li class="nav-item">
                    <a href="" class="nav-link">
                        Déconnexion
                    </a>
                </li>
            {% endif %}
        </div>
    </nav>
    {#---------------------- FIN MENU INTERFACE UTILISATEUR ---------------------#}

    {#--------------------------------- FIN HEADER ------------------------------#}
</header>

{# contiendra nos erreurs pour la connexion et l'inscription
 de même il centrera notre contenu #}
<div class="container">



    {% block body %}{% endblock %}
</div>
{#---------------------- DEBUT FOOTER ---------------------#}

{#---------------------- FIN FOOTER -----------------------#}





