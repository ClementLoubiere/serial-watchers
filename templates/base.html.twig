    {#----------------------------------------------------------------------------#}
    <script src="{{ asset('lib/bootstrap/bootstrap.min.js') }}"></script>
    <script src="{{ asset('lib/ajaxapi/ajax.js') }}"></script>
    <script src="{{ asset('lib/js/script.js') }}"></script>
{% endblock %}
</body>
</html>
