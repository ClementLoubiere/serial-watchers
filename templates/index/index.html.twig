        section carrousel
         ============================-->

        <section id="ThumbnailCarousel" class="carousel slide col-xs-12" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row">

                        {% for data in array|slice(0,4) %}
                            <div class="col-md-3 col-sm-6">
                                <a href="#x" class="thumbnail"><img src="{{ data.img }}" alt="Image"
                                                                    class="img-fluid img-thumbnail"></a>
                            </div>

                        {% endfor %}
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">

                        {% for data in array|slice(0,4) %}
                            <div class="col-md-3 col-sm-6">
                                <a href="#x" class="thumbnail"><img src="{{ data.img }}" alt="Image"
                                                                    class="img-fluid img-thumbnail"></a>
                            </div>

                        {% endfor %}
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">

                        {% for data in array|slice(0,4) %}
