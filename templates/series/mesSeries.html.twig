{% extends 'base.html.twig' %}

{% block body %}

    <h1>Mes séries</h1>

    {# AFFICHAGE DES SERIES #}

    <div class="col-md-12">
        <div class="row mt-4">
            {% for serie in json_data %}
                <div class="col-md-3">
                    <div class="card shadow-sm">
                        <img src="{{ serie['poster_path'] }}" alt="poster" class="card-img-top">
                        <div class="card-body">
                            <h4>{{ serie['original_name']|slice(0, 20) }}</h4>
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_series_ficheserie', {id: serie['id'], season_number: 1}) }}"
                               class="btn btn-sm btn-outline-secondary">
                                Voir
                            </a>
                            <a href="{{ path('app_series_retirerfav', {id: serie['fav_id']}) }}">
                                <button class="btn btn-sm btn-outline-secondary">
                                Retirer
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="alert alert-danger">Vous ne suivez actuellement aucune série !</p>
            {% endfor %}
        </div>
    </div>

{% endblock %}
