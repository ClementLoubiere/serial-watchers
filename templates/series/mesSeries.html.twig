{% extends 'base.html.twig' %}

{% block body %}



    {# AFFICHAGE DES SERIES #}

    <div id="content-wrapper">

        <div class="container-fluid">
            <h1>Mes séries</h1>
            {% for serie in json_data %}
                <div class="col-md-3">
                    <div class="card shadow-sm">
                        <img src="{{ serie['poster_path'] }}" alt="" class="card-img-top">
                        <div class="card-body">
                            <h4>{{ serie['original_name']|slice(0, 20) }}</h4>
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_series_ficheserie', {id: serie['id']}) }}" class="btn btn-sm btn-outline-secondary">
                                Voir
                            </a>
                            <a href="{{ path('app_series_retirerfav', {id: serie['fav_id']}) }}">
                                <button class="btn btn-sm btn-outline-secondary">
                                Retirer
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="alert alert-danger">Vous ne suivez actuellement aucune série !</p>
            {% endfor %}
        </div>
    </div>

{% endblock %}
