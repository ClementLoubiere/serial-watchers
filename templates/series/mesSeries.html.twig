{% extends 'base.html.twig' %}

{% block body %}

    <h1>Mes séries</h1>

    {# AFFICHAGE DES SERIES AJOUTEES #}

    <div class="col-md-12">
        <div class="row mt-4">
            {% for serie in json_data %}
                <div class="card col-md-3 shadow-sm">

                    <h4>{{ serie['original_name']|slice(0, 20) }}</h4>
                    <img src="{{ serie['poster_path'] }}" alt="" class="img-fluid">

                    <div class="my-2 d-flex justify-content-between align-items-center">
                        <a href="{{ path('app_series_ficheserie', {id: serie['id'], season_number: 1}) }}" class="btn btn-sm btn-outline-secondary">
                            Voir
                        </a>
                            <a href="{{ path('app_series_retirerfav', {id: serie['fav_id']}) }}">
                                <button class="btn btn-sm btn-outline-secondary">
                                Retirer
                                </button>
                            </a>
                    </div>
                </div>
            {% else %}
                <p class="alert alert-danger">Vous ne suivez actuellement aucune série !</p>
            {% endfor %}
        </div>
    </div>

{% endblock %}
