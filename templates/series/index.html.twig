{% extends 'base.html.twig' %}

{% block body %}
    <h1>Toutes les séries</h1>

    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    <label for="annee">Annee</label>
                    <select name="annee" class="custom-select">
                        <option selected>Aucun</option>
                        <option value="1">2018</option>
                    </select>
                </div>
                <div class="col">
                    <label for="popularite">Popularite</label>
                    <select name="popularite" class="custom-select">
                        <option selected>Aucun</option>
                        <option value="1">Popularite descendante</option>
                        <option value="2">Popularite ascendante</option>
                    </select>
                </div>
                <div class="col">
                    <label for="genre">Genre</label>
                    <select name="genre" class="custom-select">
                        <option selected>Aucun</option>
                        <option value="action">Action</option>
                        <option value="sci">Sci-fi et fantastique</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="row mt-4">
            {% for data in array %}
                <div class="card col-md-3 shadow-sm">
                    <h6 class="font-weight-bold">{{ data.name }}</h6>
                    <img src="{{ data.img }}" class="img-fluid">
                    <div class="card-body">
                        <p class="card-text">
                            {{ data.description|slice(0, 110) ~ '...' }}
                        </p>
                        <div class="my-2 d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="{{ path('app_series_ficheserie', {id: data.id}) }}" class="btn btn-sm btn-outline-secondary">
                                    Voir
                                </a>
                                <form method="post">
                                    <input type="hidden" value="{{ data.id }}" name="fav">
                                    <button type="submit"  class="btn btn-sm btn-outline-secondary btn-addSerie">
                                        Ajouter
                                    </button>
                                </form>
                            </div>
                            <small class="text-muted">
                                {{ data.datediff|date('d/m/Y') }}
                            </small>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucune série n'est affiché</p>
            {% endfor %}
        </div>

        <ul class="pagination justify-content-center">
            {% for i in 1..10 %}
                <li class="page-item">
                    <a class="page-link " href="{{ path('app_series_api', {page: i}) }}">{{ i }}</a>
                </li>
            {% endfor %}
        </ul>

    </div>

{% endblock %}


