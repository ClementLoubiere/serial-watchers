{% extends 'base.html.twig' %}

{% block body %}
    <h1>Appel de l'api</h1>

    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    <form method="get">
                    <label for="annee">Annee</label>
                    <select id="year" name="first_air_date_year" class="custom-select filter-select">
                        <option value="0" selected>Aucun</option>
                        {% for a in 2018..1990 %}
                            <option value="{{ a }}">{{ a }}</option>
                        {% endfor %}
                    </select>
                    </form>
                </div>
                <div class="col">
                    <form method="get">
                        <label for="sort_by">Trier par</label>
                        <select id="sort_by" name="sort_by" class="custom-select filter-select">
                            <option selected>Aucun</option>
                            <option value="popularity.desc">Popularité descendante</option>
                            <option value="popularity.asc">Popularité ascendante</option>
                            <option value="vote_average.desc">Note descendante</option>
                            <option value="vote_average.asc">Note ascendante</option>
                            <option value="primary_release_date.desc&page=2">Date de sortie descendante</option>
                            <option value="primary_release_date.asc">Date de sortie ascendante</option>
                            <option value="title.asc">Titre (A-Z)</option>
                            <option value="title.desc">Titre (Z-A)</option>
                        </select>
                    </form>
                </div>
                <div class="col">
                    <label for="genre">Genre</label>
                    <select name="genre" class="custom-select filter-select">
                        <option selected>Aucun</option>

                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="row mt-4">
            {% for data in array %}
                <div class="card col-md-3 shadow-sm">
                    <h4>{{ data.name }}</h4>
                    <img src="{{ data.img }}" class="img-fluid">
                    <div class="card-body">
                        <p class="card-text">
                            {{ data.description|slice(0, 110) ~ '...' }}
                        </p>
                        <div class="my-2 d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="{{ path('app_series_ficheserie', {id: data.id}) }}" class="btn btn-sm btn-outline-secondary">
                                    Voir
                                </a>
                                <form method="post">
                                    <input type="hidden" value="{{ data.id }}" name="fav">
                                    <button type="submit"  class="btn btn-sm btn-outline-secondary btn-addSerie">
                                        Ajouter
                                    </button>
                                </form>
                            </div>
                            <small class="text-muted">
                                {{ data.datediff|date('d/m/Y') }}
                            </small>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="alert alert-danger">Aucune série n'est affiché</p>
            {% endfor %}
        </div>

          <ul class="pagination justify-content-center">
            {% for i in 1..10 %}
                <li class="page-item {% if i is null %} '' {% else %} 'active' {% endif %}">
                    <a class="page-link " href="{{ path('app_series_api', {page: i}) }}">{{ i }}</a>
                </li>
            {% endfor %}
        </ul>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
       $('.filter-select').on('selected', function () {
           // soumet le formulaire, lorsqu'une valeur change
           this.form.submit();
       });
    </script>
{% endblock %}


