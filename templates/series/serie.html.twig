{% extends 'base.html.twig' %}

{% block body %}
    {% for tab in fiche %}
    <div class="mt-5 row">
        <div class="col">
            <div class="row">
                <div class="col-md-12 px-0">
                    <span class="">{{ tab.network ~ ' ('~tab.country~')' ~ ' | ' ~ tab.seasons ~ ' saisons' }}</span>
                    <p class="lead">
                        {% for genre in nb_genre %}
                            <span class="badge badge-info">{{ genre.name }}</span>
                        {% endfor %}
                    </p>
                    <p class="lead my-3">
                        {{ tab.description }}
                    </p>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <img src="{{ tab.img }}" class="img-fluid">
                    <div class="row">
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="dropdown text-center">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropSeason" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Les saisons
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropSeason">
                        {% for num in nb_season %}
                            {% if num.season == '0' %}
                                <a class="d-none" href="#">{{ 'Saison '~ num.season }}</a>
                            {% else %}
                                <a class="dropdown-item" name="saison" href="{{ path('app_series_ficheserie', {id: tab.id_api, season_number: num.season }) }}">{{ 'Saison '~ num.season }}</a>
                            {% endif %}
                        {% endfor %}
                        </div>
                    </div>
                    <table class="table table-striped">
                        <tr class="text-center">
                            <th>Numéro de l'épisode</th>
                            <th>Nom de l'épisode</th>
                            <th>Date de sortie</th>
                            <th></th>
                        </tr>
                            {% for episode in episodes %}
                        <tr class="text-center">
                            <td>{{ episode.num_episode }}</td>
                            <td>{{ episode.name_episode }}</td>
                            <td>{{ episode.date_episode|date('d/m/Y') }}</td>
                            <td>
                                <form method="post">
                                    <input type="hidden" value="{{ episode.id_episode }}" name="check">
                                    <button type="submit" class="btn btn-outline-light" style="border-radius: 5px">
                                        {% if episode.id_episode in tableau %}
                                        <a class="text-success" href="{{ path('app_series_ficheserie', {id: tab.id_api, season_number: episode.season_number}) }}"><i class="fas fa-eye" id="check"></i>
                                        </a>
                                        {% else %}
                                            <a class="text-info" href="{{ path('app_series_ficheserie', {id: tab.id_api, season_number: episode.season_number}) }}"><i class="fas fa-eye" id="check"></i>
                                            </a>
                                        {% endif %}
                                    </button>
                                </form>
                            </td>
                        </tr>
                            {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}

{% endblock %}


{% block javascripts %}
{{ parent() }}
    <script>
        $('#check').click(function(e){
        $(this).addClass('text-success').removeClass('text-info');
        });
    </script>
{% endblock %}